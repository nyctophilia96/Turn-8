@using Turn8.Models.Classes
@model List<Blog>

<div class="padding1">
    <h4>Legendary Tracks</h4>
    <div class="box-left">
        @foreach (var x in Model)
        {
            <div class="bot-img">
                <a href="/blog/blogdetail/@x.Id"><img src="@x.BlogImage" alt="" style=" width: 300px; height: 75px;" /></a>
            </div>
            <div class="bot-desc">
                <p>
                    @if (x.Description.Length > 100)
                    {
                            @x.Description.Substring(0, 100)
                    }
                    else
                    {
                            @x.Description
                    }...
                </p>

            </div>
            <div class="clear"></div>
        }
    </div>
    @await Component.InvokeAsync("Partial5")
</div>
