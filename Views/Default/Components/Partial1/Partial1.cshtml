@using Turn8.Models.Classes
@model List<Blog>
<div class="con-bot">
    @foreach(var x in Model)
    {
        <div class="left">
            <div class="bot-left">
                <img src="@x.BlogImage" alt="" style=" width: 300px; height: 150px;" />
            </div>
            <div class="left-text">
                <h4>@x.Title</h4>
                <p>
                    @if (x.Description.Length > 80)
                    {
                        @x.Description.Substring(0, 80)
                    }
                    else
                    {
                        @x.Description
                    }...
                </p>
                <p><a href="/blog/blogdetail/@x.Id"><span class="read">Read More >></span></a></p>
            </div>
        </div>
    }
    @await Component.InvokeAsync("Partial2")
   <div class="clear"></div>
</div>
